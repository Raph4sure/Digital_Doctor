<%- include('partials/header') %>
<%- include('partials/nav_bar') %>

<body>
  <section class="complete_body">
    <main class="container">
      <section class="container__body">
        <form action="/editPatient/<%= patient.id %>" method="POST" class="form" id="registrationForm">
          <div class="form__group">
            <h2 class="form__h2">
              Edit Your Profile
            </h2>
          </div>
          <div class="form__group form_val">
            <label class="form__label form__label-anim" for="first_name">First Name</label>
            <input type="text" class="form__input form__input-anim" id="first_name" placeholder="First Name" name="first_name" value="<%= patient.first_name  || ''  %>" first_name required minlength="3" custommaxlength="30" />
            <span class="error-icon hidden">
              <i class="fa-solid fa-circle-exclamation"></i>
            </span>
            <span class="success-icon hidden">
              <i class="fa-solid fa-circle-check"></i>
            </span>
            <div class="error"></div>
          </div>
          <div class="form__group form_val">
            <label class="form__label form__label-anim" for="last_name">Last Name</label>
            <input type="text" class="form__input form__input-anim" id="last_name" placeholder="Last Name" name="last_name" value=" <%= patient.last_name || ''  %>" required minlength="3" custommaxlength="30" />
            <span class="error-icon hidden">
              <i class="fa-solid fa-circle-exclamation"></i>
            </span>
            <span class="success-icon hidden">
              <i class="fa-solid fa-circle-check"></i>
            </span>
            <div class="error"></div>
          </div>

          <div class="form__group form_val">
            <label class="form__label form__label-anim" for="age">Phone</label>
            <input type="number" class="form__input form__input-anim" id="phone_no" placeholder="phone" name="phone" value="<%= patient.phone || ''  %>" required minlength="8" />
            <span class="error-icon hidden">
              <i class="fa-solid fa-circle-exclamation"></i>
            </span>
            <span class="success-icon hidden">
              <i class="fa-solid fa-circle-check"></i>
            </span>
            <div class="error"></div>
          </div>
          <div class="form__group form__radio-group form_val">
            <h3>Gender</h3>
            <div class="form__group form__radio-group">
              <input type="radio" class="form__radio-input" id="male" value="male" <%= patient.gender
                                === 'male' ? 'checked' : '' %> name="gender" required-radio />
              <label class="form__label form__radio-label form__radio-first" for="male">
                <span class="form__radio-button"></span>
                Male
              </label>
            </div>
            <div class="form__group form__radio-group">
              <input type="radio" class="form__radio-input" id="female" value="female" <%=
                                patient.gender === 'female' ? 'checked' : ''
                                %> name="gender" required-radio />
              <label for="female" class="form__label form__radio-label form__radio-second">
                <span class="form__radio-button"></span>
                Female
              </label>
            </div>
            <span class="error-icon span__radio-error radio-1 hidden">
              <i class="fa-solid fa-circle-exclamation"></i>
            </span>
            <span class="success-icon span__radio-success radio-2 hidden">
              <i class="fa-solid fa-circle-check"></i>
            </span>
            <div class="error"></div>
          </div>

          <div class="form__group form_val">
            <label class="form__label form__label-anim" for="dob">Date of Birth</label>
            <input type="date" class="form__input form__input-anim" id="dob" name="date_of_birth" placeholder="Date of Birth" value="<%= patient.date_of_birth ? patient.date_of_birth.toISOString().split('T')[0] : '' %>" required />
            <span class="error-icon hidden">
              <i class="fa-solid fa-circle-exclamation"></i>
            </span>
            <span class="success-icon hidden">
              <i class="fa-solid fa-circle-check"></i>
            </span>
            <div class="error"></div>
          </div>
          <div class="form__group form_val">
            <label class="form__label form__label-anim" for="address">Address</label>
            <input type="text" class="form__input form__input-anim" id="address" placeholder="address" value="<%= patient.address %>" name="address" required minlength="3" custommaxlength="500" />
            <span class="error-icon hidden">
              <i class="fa-solid fa-circle-exclamation"></i>
            </span>
            <span class="success-icon hidden">
              <i class="fa-solid fa-circle-check"></i>
            </span>
            <div class="error"></div>
          </div>

          <div class="form__group form__terms form_val">
            <input type="checkbox" name="terms" id="terms" value="accepted" required-checkbox />
            <label class="form__label" for="terms">I agree to the terms and condition
            </label>
            <span class="error-icon hidden">
              <i class="fa-solid fa-circle-exclamation"></i>
            </span>
            <span class="success-icon hidden">
              <i class="fa-solid fa-circle-check"></i>
            </span>
            <div class="error"></div>
          </div>
          <button class="form__button" type="submit">
            Submit
          </button>
          <p class="container__body-p">
            Already have an account?
            <a href="./login.html">Login</a> Instead
          </p>
        </form>
      </section>
      <!-- <div id="formSummary"></div> -->
    </main>
  </section>
  <%- include('partials/footer') %>

  <script src="/javascripts/edit_patient.js"></script>
</body>

</html>